<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="idv.jasonwang.drawableedittext.sample.SampleActivity">

    <idv.jasonwang.drawableedittext.DrawableEditText
        android:id="@+id/drawableEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg"
        android:drawablePadding="10dp"
        android:hint="key something..."
        android:padding="10dp"
        app:drawableHeight="20dp"
        app:drawableLeft="@mipmap/ic_launcher_round"
        app:drawableWidth="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
